<div id="blocker-report-container" class="container mt-4">
  <div class="row justify-content-sm-center">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <!-- Blocker Report List -->
          <div class="bmd-form-group bmd-collapse-inline pull-xs-right">
            <p class="lead text-secondary" id="blocker-search-text">Blocker Report List</p>
            <button class="btn bmd-btn-fab bmd-btn-fab-sm" id="blocker-search-btn" for="blocker-search" data-toggle="collapse" data-target="#collapse-search" aria-expanded="false" aria-controls="collapse-search">
              <i class="material-icons">search</i>
            </button>
            <span id="collapse-search" class="collapse">
              <input class="form-control" type="text" id="blocker-search" placeholder=" e.g. title: <report-title>...">
            </span>
          </div>
        </div>
        <div class="card-body table-responsive">
          <table class="table table-striped">
            <!-- table header -->
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">
                  <button class="btn btn-secondary blocker-sort-btn" id="blocker-title-sort-btn">
                    {{{title}}}
                    <i class="material-icons">keyboard_arrow_down</i>
                  </button>
                </th>
                <th scope="col">
                  <button class="btn btn-secondary blocker-sort-btn" id="blocker-creator-sort-btn">
                    {{{creator}}}
                    <i class="material-icons">keyboard_arrow_down</i>
                  </button>
                </th>
                <th scope="col">
                  <button class="btn btn-secondary blocker-sort-btn" id="blocker-created-sort-btn">
                    {{{created}}}
                    <i class="material-icons">keyboard_arrow_down</i>
                  </button>
                </th>
                <th></th>
              </tr>
            </thead>
            <!-- table body -->
            <tbody>
              {{#each bindings}}
                <tr class="blocker-report-row">
                  <th class="blocker-report-index" scope="row">{{@index}}</th>
                  <td class="blocker-report-title">{{{this.title.value}}}</td>
                  <td class="blocker-report-creator">{{{this.creator.value}}}</td>
                  <td class="blocker-report-created">{{{this.created.value}}}</td>
                  <td>
                    <button type="button" class="btn btn-secondary modal-btn" data-toggle="modal" data-target="#blockerReportModal">
                      <i class="material-icons">arrow_drop_down</i>
                      <div class="identifier" value="{{{this.identifier.value}}}" hidden>{{{this.identifier.value}}}</div>
                    </button>
                  </td>
                </tr>
              {{/each}}
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- modal pup-up window -->
<script type="text/javascript" src="index/public/js/blocker-report-modal.js"></script>
<!-- search input handling -->
<script type="text/javascript" src="index/public/js/blocker-report-search.js"></script>
<!-- sort col handling -->
<script type="text/javascript" src="index/public/js/blocker-report-sort.js"></script>
